{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "provider": {
    "soundwave": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "soundwave",
      "options": {
        "baseURL": "http://127.0.0.1:8013/v1"
      },
      "models": {
        "gpt-oss:120b": {
          "name": "GPT OSS: 120B",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "qwen3-coder:a3b": {
          "name": "Qwen3-Coder: 30B A3B",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        }
      }
    }
  }
}
